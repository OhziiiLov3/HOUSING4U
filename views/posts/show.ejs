<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Housing4You</title>
</head>

<body>
    <nav>
        <h1>Show Page Housing4You</h1>
        <ul>
            <li>
                <a href="/posts">Listings</a>
            </li>
            <li>
                <a href="/posts/new">Add Listings</a>
            </li>
            <li>
                <a href="/replies">Reply</a>
            </li>
        </ul>
    </nav>
    <main>
        <section>
            <h2>Listing Info</h2>
            <a href="/posts/<%= post._id %>/edit">Update</a>
            <ul>
                <li>Location: <%= post.location %></li> 
            </ul>
        </section>
        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete" />
        </form>

        <section>
            <h2>Contact Today!</h2>
          <ul>
                <% post.replies.forEach(post => { %>
                    <li>
                        <a href="/replies/<%= reply._id %>"> <%= reply.name %></a>
                    </li>
                    <% }) %>
            </ul> 
           
        </section>
    </main>
</body>

</html>